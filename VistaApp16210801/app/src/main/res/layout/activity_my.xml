<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/scan_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="@string/scan_button"
        android:onClick="scanDevices"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensor_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:hint="@string/sensor_reading"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.44"
        android:weightSum="1">

        <Button
            android:id="@+id/stop_vibration"
            android:layout_width="131dp"
            android:layout_height="70dp"
            android:text="Stop Vibration"
            android:layout_gravity="center_horizontal"
            android:onClick="stopVibration"/>

        <Button
            android:id="@+id/start_vibration"
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:text="Start Vibration"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.19"
            android:onClick="startVibration"/>

        <Button
            android:id="@+id/start_condition"
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:text="Start Condition"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.19"
            android:onClick="startCondition"/>
    </LinearLayout>

</LinearLayout>


